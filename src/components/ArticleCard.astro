---
import {
    Sparkle,
    Heart,
    MessageCircle,
    CircleMinus,
    Bookmark,
    Ellipsis,
} from "@lucide/astro";

import { formatDateShort } from "../helper/formatDateShort";

interface Props {
    author: string;
    title: string;
    subtitle: string | null;
    date: string;
    isPremium: boolean;
    image: {
        sourceUrl: string;
        altText: string;
    } | null;
}

const { author, title, subtitle, date, isPremium, image } =
    Astro.props as Props;

const likes = +(Math.random() * 4 + 1).toFixed(1);
const comments = Math.floor(Math.random() * (600 - 20 + 1)) + 20;
---

<article class="py-6 border-b border-gray-100">
    <div class="flex items-start gap-3 mb-3">
        <div
            class="w-5 h-5 bg-black text-white text-xs font-medium rounded-sm flex items-center justify-center flex-shrink-0"
        >
            {author.charAt(0)}
        </div>
        <div class="flex items-center gap-1 text-sm text-foreground-muted">
            <span class="text-gray-500 text-xs">In</span>
            <span class="text-gray-800 text-xs">jeanpoolgg/midium</span>
            <span class="text-gray-500 text-xs">by</span>
            <span class="text-gray-800 text-xs">{author}</span>
        </div>
    </div>

    <div class="flex gap-5">
        <div class="flex-1">
            <a href="/post" class="no-underline">
                <h2
                    class="text-2xl font-bold text-foreground mb-2 line-clamp-2 cursor-pointer hover:text-foreground-light"
                >
                    {title}
                </h2>
            </a>

            <p class="text-foreground-muted text-gray-600 mb-3 line-clamp-2">
                {subtitle ?? ""}
            </p>

            <div class="w-full flex items-center justify-between h-[48px]">
                <div
                    class="flex items-center gap-4 text-sm text-foreground-muted"
                >
                    {
                        isPremium && (
                            <Sparkle class="w-3 h-3 text-amber-300 fill-amber-300" />
                        )
                    }
                    <span>{formatDateShort(date)}</span>

                    <div class="flex items-center gap-1 md:hidden lg:block">
                        <Heart class="w-3 h-3 fill-gray-600 text-gray-600" />
                        <span>{likes}K</span>
                    </div>

                    <div class="flex items-center gap-1 md:hidden lg:block">
                        <MessageCircle class="w-3 h-3 fill-gray-600 text-gray-600" />
                        <span>{comments}</span>
                    </div>
                </div>

                <div class="hidden md:flex items-center gap-2">
                    <a
                        type="button"
                        class="w-8 h-8 rounded p-1 md:flex items-center justify-center text-foreground-muted hover:text-foreground hidden"
                        aria-label="Bookmark"
                    >
                        <CircleMinus class="h-5 text-gray-500" stroke-width={1}/>
                    </a>

                    <a
                        type="button"
                        class="w-8 h-8 rounded p-1 md:flex items-center justify-center text-foreground-muted hover:text-foreground hidden"
                        aria-label="Bookmark"
                    >
                        <Bookmark class="h-5 text-gray-500" stroke-width={1} />
                    </a>

                    <a
                        type="button"
                        class="w-8 h-8 rounded p-1 md:flex items-center justify-center text-foreground-muted hover:text-foreground hidden"
                        aria-label="More options"
                    >
                        <Ellipsis class="h-5 text-gray-700" stroke-width={3} />
                    </a>
                </div>
            </div>
        </div>

        {
            image && (
                <div class="flex flex-col justify-between">
                    <img
                        src={image.sourceUrl}
                        alt={image.altText}
                        class="md:ms-14 ms-6 rounded w-[80px] h-[53px] md:w-[160px] md:h-[107px] object-cover"
                    />
                    <div class="w-full flex items-center justify-end h-[48px] md:hidden">
                        <a
                            type="button"
                            class="w-8 h-8 rounded p-1 md:flex items-center justify-center"
                            aria-label="Bookmark"
                        >
                            <CircleMinus
                                class="h-5 text-gray-500"
                                stroke-width={1}
                            />
                        </a>

                        <a
                            type="button"
                            class="w-8 h-8 rounded p-1 md:flex items-center justify-center"
                            aria-label="Bookmark"
                        >
                            <Bookmark
                                class="h-5 text-gray-500"
                                stroke-width={1}
                            />
                        </a>

                        <a
                            type="button"
                            class="w-8 h-8 rounded p-1 md:flex items-center justify-center"
                            aria-label="More options"
                        >
                            <Ellipsis
                                class="h-5 text-gray-700"
                                stroke-width={3}
                            />
                        </a>
                    </div>
                </div>
            )
        }
    </div>
</article>
